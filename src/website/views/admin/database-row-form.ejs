<!DOCTYPE html>
<html>
  <head>
    <title><%= row ? 'Edit' : 'Add' %> Row - <%= tableName %> - 1A 75th</title>
    <meta content="1A Website" property="og:title" />
    <meta content="Welcome to 1A!" property="og:description" />
    <meta content="https://1a75.org/database-editor" property="og:url" />
    <meta content="https://cdn.xanderxx.xyz/1a-logo.png" property="og:image" />
    <meta content="#4b5a2a" data-react-helmet="true" name="theme-color" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <link rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" href="/custom.css" />
  </head>
  <body>
    <%- include('../partials/navbar', { user, active }) %>
    <div class="container mt-5">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0"><%= row ? 'Edit' : 'Add' %> Row - <%= tableName %></h1>
        <div class="d-flex gap-2">
          <a href="/database-editor/table/<%= tableName %>" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-2"></i>Back to Table
          </a>
        </div>
      </div>

      <!-- Form -->
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0"><%= row ? 'Edit' : 'Add' %> Row</h5>
        </div>
        <div class="card-body">
          <form method="POST" action="/database-editor/table/<%= tableName %>/save">
            <% if (row && primaryKey) { %>
              <input type="hidden" name="id" value="<%= row[primaryKey] %>">
            <% } %>
            
            <div class="row">
              <% schema.forEach(column => { %>
                <div class="col-md-6 mb-3">
                  <label for="<%= column.name %>" class="form-label">
                    <%= column.name %>
                    <% if (column.pk > 0) { %>
                      <i class="bi bi-key text-warning ms-1" title="Primary Key"></i>
                    <% } %>
                    <% if (column.notnull === 1) { %>
                      <span class="text-danger">*</span>
                    <% } %>
                  </label>
                  
                  <% if (column.pk > 0 && row) { %>
                    <!-- Primary key field (read-only when editing) -->
                    <input 
                      type="text" 
                      class="form-control" 
                      value="<%= row[column.name] %>" 
                      readonly
                      style="background-color: #f8f9fa;"
                    >
                    <div class="form-text">Primary key cannot be modified</div>
                  <% } else if (column.type === 'TEXT' && column.name.toLowerCase().includes('description')) { %>
                    <!-- Textarea for description fields -->
                    <textarea 
                      name="<%= column.name %>" 
                      id="<%= column.name %>" 
                      class="form-control" 
                      rows="3"
                      <%= column.notnull === 1 ? 'required' : '' %>
                    ><%= row ? row[column.name] || '' : '' %></textarea>
                  <% } else if (column.type === 'INTEGER' && column.name.toLowerCase().includes('id')) { %>
                    <!-- Number input for ID fields -->
                    <input 
                      type="number" 
                      name="<%= column.name %>" 
                      id="<%= column.name %>" 
                      class="form-control"
                      value="<%= row ? row[column.name] || '' : '' %>"
                      <%= column.notnull === 1 ? 'required' : '' %>
                    >
                  <% } else if (column.type === 'REAL' || column.type === 'NUMERIC') { %>
                    <!-- Number input for decimal fields -->
                    <input 
                      type="number" 
                      name="<%= column.name %>" 
                      id="<%= column.name %>" 
                      class="form-control"
                      step="0.01"
                      value="<%= row ? row[column.name] || '' : '' %>"
                      <%= column.notnull === 1 ? 'required' : '' %>
                    >
                  <% } else if (column.type === 'INTEGER') { %>
                    <!-- Number input for integer fields -->
                    <input 
                      type="number" 
                      name="<%= column.name %>" 
                      id="<%= column.name %>" 
                      class="form-control"
                      value="<%= row ? row[column.name] || '' : '' %>"
                      <%= column.notnull === 1 ? 'required' : '' %>
                    >
                  <% } else if (column.type === 'TEXT' && column.name.toLowerCase().includes('date')) { %>
                    <!-- Date input for date fields -->
                    <input 
                      type="datetime-local" 
                      name="<%= column.name %>" 
                      id="<%= column.name %>" 
                      class="form-control"
                      value="<%= row && row[column.name] ? new Date(row[column.name]).toISOString().slice(0, 16) : '' %>"
                      <%= column.notnull === 1 ? 'required' : '' %>
                    >
                  <% } else if (column.type === 'TEXT' && column.name.toLowerCase().includes('email')) { %>
                    <!-- Email input for email fields -->
                    <input 
                      type="email" 
                      name="<%= column.name %>" 
                      id="<%= column.name %>" 
                      class="form-control"
                      value="<%= row ? row[column.name] || '' : '' %>"
                      <%= column.notnull === 1 ? 'required' : '' %>
                    >
                  <% } else if (column.type === 'TEXT' && column.name.toLowerCase().includes('url')) { %>
                    <!-- URL input for URL fields -->
                    <input 
                      type="url" 
                      name="<%= column.name %>" 
                      id="<%= column.name %>" 
                      class="form-control"
                      value="<%= row ? row[column.name] || '' : '' %>"
                      <%= column.notnull === 1 ? 'required' : '' %>
                    >
                  <% } else if (column.type === 'TEXT' && column.name.toLowerCase().includes('status')) { %>
                    <!-- Select for status fields -->
                    <select 
                      name="<%= column.name %>" 
                      id="<%= column.name %>" 
                      class="form-select"
                      <%= column.notnull === 1 ? 'required' : '' %>
                    >
                      <option value="">Select Status</option>
                      <option value="active" <%= row && row[column.name] === 'active' ? 'selected' : '' %>>Active</option>
                      <option value="inactive" <%= row && row[column.name] === 'inactive' ? 'selected' : '' %>>Inactive</option>
                      <option value="pending" <%= row && row[column.name] === 'pending' ? 'selected' : '' %>>Pending</option>
                      <option value="approved" <%= row && row[column.name] === 'approved' ? 'selected' : '' %>>Approved</option>
                      <option value="denied" <%= row && row[column.name] === 'denied' ? 'selected' : '' %>>Denied</option>
                    </select>
                  <% } else if (column.type === 'TEXT' && column.name.toLowerCase().includes('type')) { %>
                    <!-- Select for type fields -->
                    <select 
                      name="<%= column.name %>" 
                      id="<%= column.name %>" 
                      class="form-select"
                      <%= column.notnull === 1 ? 'required' : '' %>
                    >
                      <option value="">Select Type</option>
                      <option value="income" <%= row && row[column.name] === 'income' ? 'selected' : '' %>>Income</option>
                      <option value="expense" <%= row && row[column.name] === 'expense' ? 'selected' : '' %>>Expense</option>
                      <option value="donation" <%= row && row[column.name] === 'donation' ? 'selected' : '' %>>Donation</option>
                    </select>
                  <% } else if (column.type === 'TEXT') { %>
                    <!-- Default text input -->
                    <input 
                      type="text" 
                      name="<%= column.name %>" 
                      id="<%= column.name %>" 
                      class="form-control"
                      value="<%= row ? row[column.name] || '' : '' %>"
                      <%= column.notnull === 1 ? 'required' : '' %>
                    >
                  <% } else { %>
                    <!-- Fallback text input -->
                    <input 
                      type="text" 
                      name="<%= column.name %>" 
                      id="<%= column.name %>" 
                      class="form-control"
                      value="<%= row ? row[column.name] || '' : '' %>"
                      <%= column.notnull === 1 ? 'required' : '' %>
                    >
                  <% } %>
                  
                  <div class="form-text">
                    Type: <%= column.type %>
                    <% if (column.notnull === 1) { %>
                      • Required
                    <% } %>
                    <% if (column.pk > 0) { %>
                      • Primary Key
                    <% } %>
                  </div>
                </div>
              <% }) %>
            </div>
            
            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle me-2"></i><%= row ? 'Update' : 'Create' %> Row
              </button>
              <a href="/database-editor/table/<%= tableName %>" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle me-2"></i>Cancel
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html> 