        function setupCropEventListeners() {
            const selection = document.getElementById('cropSelection');
            const sourceImage = document.getElementById('cropSourceImage');
            
            selection.addEventListener('mousedown', handleCropMouseDown);
            document.addEventListener('mousemove', handleCropMouseMove);
            document.addEventListener('mouseup', handleCropMouseUp);
            
            // Handle resize handles
            const handles = selection.querySelectorAll('.crop-handle');
            handles.forEach(handle => {
                handle.addEventListener('mousedown', handleResizeMouseDown);
                handle.addEventListener('touchstart', handleResizeMouseDown);
            });
        }

        function handleCropMouseDown(e) {
            if (e.target.classList.contains('crop-handle')) return;
            
            cropData.isDragging = true;
            cropData.startX = e.clientX - cropData.currentX;
            cropData.startY = e.clientY - cropData.currentY;
            e.preventDefault();
        }

        function handleResizeMouseDown(e) {
            const selection = document.getElementById('cropSelection');
            cropData.isResizing = true;
            cropData.resizeHandle = e.target.classList[1];
            cropData.startX = e.clientX;
            cropData.startY = e.clientY;
            cropData.originalWidth = selection.offsetWidth;
            cropData.originalHeight = selection.offsetHeight;
            cropData.originalLeft = selection.offsetLeft;
            cropData.originalTop = selection.offsetTop;
            e.preventDefault();
            e.stopPropagation();
        }

        function handleCropMouseMove(e) {
            if (!cropData.isDragging && !cropData.isResizing) return;
            
            const selection = document.getElementById('cropSelection');
            const sourceImage = document.getElementById('cropSourceImage');
            const rect = sourceImage.getBoundingClientRect();
            
            if (cropData.isDragging) {
                const newX = e.clientX - cropData.startX;
                const newY = e.clientY - cropData.startY;
                
                // Constrain to image bounds
                const maxX = rect.width - selection.offsetWidth;
                const maxY = rect.height - selection.offsetHeight;
                
                cropData.currentX = Math.max(0, Math.min(newX, maxX));
                cropData.currentY = Math.max(0, Math.min(newY, maxY));
                
                selection.style.left = cropData.currentX + 'px';
                selection.style.top = cropData.currentY + 'px';
            } else if (cropData.isResizing) {
                const deltaX = e.clientX - cropData.startX;
                const deltaY = e.clientY - cropData.startY;
                
                let newWidth = cropData.originalWidth;
                let newHeight = cropData.originalHeight;
                let newLeft = cropData.originalLeft;
                let newTop = cropData.originalTop;
                
                switch(cropData.resizeHandle) {
                    case 'crop-handle-se':
                        newWidth = Math.max(50, cropData.originalWidth + deltaX);
                        newHeight = Math.max(50, cropData.originalHeight + deltaY);
                        break;
                    case 'crop-handle-sw':
                        newWidth = Math.max(50, cropData.originalWidth - deltaX);
                        newHeight = Math.max(50, cropData.originalHeight + deltaY);
                        newLeft = cropData.originalLeft + cropData.originalWidth - newWidth;
                        break;
                    case 'crop-handle-ne':
                        newWidth = Math.max(50, cropData.originalWidth + deltaX);
                        newHeight = Math.max(50, cropData.originalHeight - deltaY);
                        newTop = cropData.originalTop + cropData.originalHeight - newHeight;
                        break;
                    case 'crop-handle-nw':
                        newWidth = Math.max(50, cropData.originalWidth - deltaX);
                        newHeight = Math.max(50, cropData.originalHeight - deltaY);
                        newLeft = cropData.originalLeft + cropData.originalWidth - newWidth;
                        newTop = cropData.originalTop + cropData.originalHeight - newHeight;
                        break;
                }
                
                // Constrain to image bounds
                if (newLeft < 0) {
                    newWidth += newLeft;
                    newLeft = 0;
                }
                if (newTop < 0) {
                    newHeight += newTop;
                    newTop = 0;
                }
                if (newLeft + newWidth > rect.width) {
                    newWidth = rect.width - newLeft;
                }
                if (newTop + newHeight > rect.height) {
                    newHeight = rect.height - newTop;
                }
                
                selection.style.width = newWidth + 'px';
                selection.style.height = newHeight + 'px';
                selection.style.left = newLeft + 'px';
                selection.style.top = newTop + 'px';
            }
        }

        function handleCropMouseUp() {
            cropData.isDragging = false;
            cropData.isResizing = false;
            cropData.resizeHandle = null;
        }

        function applyCrop() {
            const selection = document.getElementById('cropSelection');
            const sourceImage = document.getElementById('cropSourceImage');
            const finalImage = document.getElementById('finalCropImage');
            
            // Create a canvas to crop the image with actual dimensions
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            
            const rect = sourceImage.getBoundingClientRect();
            const scaleX = sourceImage.naturalWidth / rect.width;
            const scaleY = sourceImage.naturalHeight / rect.height;
            
            const cropX = selection.offsetLeft * scaleX;
            const cropY = selection.offsetTop * scaleY;
            const cropWidth = selection.offsetWidth * scaleX;
            const cropHeight = selection.offsetHeight * scaleY;
            
            // Use actual crop dimensions
            canvas.width = cropWidth;
            canvas.height = cropHeight;
            
            ctx.drawImage(sourceImage, cropX, cropY, cropWidth, cropHeight, 0, 0, cropWidth, cropHeight);
            
            const croppedImageUrl = canvas.toDataURL('image/jpeg', 0.9);
            finalImage.src = croppedImageUrl;
            
            // Store crop data for form submission
            const cropData = {
                x: cropX,
                y: cropY,
                width: cropWidth,
                height: cropHeight
            };
            
            document.getElementById('cropData').value = JSON.stringify(cropData);
            console.log('Crop data stored:', cropData);
            
            // Show crop dimensions
            document.getElementById('cropDimensions').textContent = 
                `Crop size: ${Math.round(cropWidth)}  ${Math.round(cropHeight)} pixels`;
            
            document.getElementById('finalCropPreview').style.display = 'block';
            cancelCrop();
        }

        function cancelCrop() {
            const overlay = document.getElementById('cropOverlay');
            overlay.style.display = 'none';
            
            document.getElementById('applyCropBtn').style.display = 'none';
            document.getElementById('cancelCropBtn').style.display = 'none';
            
            cropData.isActive = false;
            
            // Remove event listeners
            document.removeEventListener('mousemove', handleCropMouseMove);
            document.removeEventListener('mouseup', handleCropMouseUp);
        }

        // Edit modal crop functions
        function startEditCrop() {
            const overlay = document.getElementById('editCropOverlay');
            const selection = document.getElementById('editCropSelection');
            const sourceImage = document.getElementById('editCropSourceImage');
            
            overlay.style.display = 'block';
            
            // Initialize crop selection to center of image
            const rect = sourceImage.getBoundingClientRect();
            const centerX = rect.width / 2 - 100;
            const centerY = rect.height / 2 - 100;
            
            selection.style.left = centerX + 'px';
            selection.style.top = centerY + 'px';
            selection.style.width = '200px';
            selection.style.height = '200px';
            
            document.getElementById('applyEditCropBtn').style.display = 'inline-block';
            document.getElementById('cancelEditCropBtn').style.display = 'inline-block';
            
            cropData.isActive = true;
            setupEditCropEventListeners();
        }

        function setupEditCropEventListeners() {
            const selection = document.getElementById('editCropSelection');
            
            selection.addEventListener('mousedown', handleEditCropMouseDown);
            document.addEventListener('mousemove', handleEditCropMouseMove);
            document.addEventListener('mouseup', handleEditCropMouseUp);
            
            // Handle resize handles
            const handles = selection.querySelectorAll('.crop-handle');
            handles.forEach(handle => {
                handle.addEventListener('mousedown', handleEditResizeMouseDown);
            });
        }

        function handleEditCropMouseDown(e) {
            if (e.target.classList.contains('crop-handle')) return;
            
            cropData.isDragging = true;
            cropData.startX = e.clientX - cropData.currentX;
            cropData.startY = e.clientY - cropData.currentY;
            e.preventDefault();
        }

        function handleEditResizeMouseDown(e) {
            const selection = document.getElementById('editCropSelection');
            cropData.isResizing = true;
            cropData.resizeHandle = e.target.classList[1];
            cropData.startX = e.clientX;
            cropData.startY = e.clientY;
            cropData.originalWidth = selection.offsetWidth;
            cropData.originalHeight = selection.offsetHeight;
            cropData.originalLeft = selection.offsetLeft;
            cropData.originalTop = selection.offsetTop;
            e.preventDefault();
            e.stopPropagation();
        }

        function handleEditCropMouseMove(e) {
            if (!cropData.isDragging && !cropData.isResizing) return;
            
            const selection = document.getElementById('editCropSelection');
            const sourceImage = document.getElementById('editCropSourceImage');
            const rect = sourceImage.getBoundingClientRect();
            
            if (cropData.isDragging) {
                const newX = e.clientX - cropData.startX;
                const newY = e.clientY - cropData.startY;
                
                // Constrain to image bounds
                const maxX = rect.width - selection.offsetWidth;
                const maxY = rect.height - selection.offsetHeight;
                
                cropData.currentX = Math.max(0, Math.min(newX, maxX));
                cropData.currentY = Math.max(0, Math.min(newY, maxY));
                
                selection.style.left = cropData.currentX + 'px';
                selection.style.top = cropData.currentY + 'px';
            } else if (cropData.isResizing) {
                const deltaX = e.clientX - cropData.startX;
                const deltaY = e.clientY - cropData.startY;
                
                let newWidth = cropData.originalWidth;
                let newHeight = cropData.originalHeight;
                let newLeft = cropData.originalLeft;
                let newTop = cropData.originalTop;
                
                switch(cropData.resizeHandle) {
                    case 'crop-handle-se':
                        newWidth = Math.max(50, cropData.originalWidth + deltaX);
                        newHeight = Math.max(50, cropData.originalHeight + deltaY);
                        break;
                    case 'crop-handle-sw':
                        newWidth = Math.max(50, cropData.originalWidth - deltaX);
                        newHeight = Math.max(50, cropData.originalHeight + deltaY);
                        newLeft = cropData.originalLeft + cropData.originalWidth - newWidth;
                        break;
                    case 'crop-handle-ne':
                        newWidth = Math.max(50, cropData.originalWidth + deltaX);
                        newHeight = Math.max(50, cropData.originalHeight - deltaY);
                        newTop = cropData.originalTop + cropData.originalHeight - newHeight;
                        break;
                    case 'crop-handle-nw':
                        newWidth = Math.max(50, cropData.originalWidth - deltaX);
                        newHeight = Math.max(50, cropData.originalHeight - deltaY);
                        newLeft = cropData.originalLeft + cropData.originalWidth - newWidth;
                        newTop = cropData.originalTop + cropData.originalHeight - newHeight;
                        break;
                }
                
                // Constrain to image bounds
                if (newLeft < 0) {
                    newWidth += newLeft;
                    newLeft = 0;
                }
                if (newTop < 0) {
                    newHeight += newTop;
                    newTop = 0;
                }
                if (newLeft + newWidth > rect.width) {
                    newWidth = rect.width - newLeft;
                }
                if (newTop + newHeight > rect.height) {
                    newHeight = rect.height - newTop;
                }
                
                selection.style.width = newWidth + 'px';
                selection.style.height = newHeight + 'px';
                selection.style.left = newLeft + 'px';
                selection.style.top = newTop + 'px';
            }
        }

        function handleEditCropMouseUp() {
            cropData.isDragging = false;
            cropData.isResizing = false;
            cropData.resizeHandle = null;
        }

        function applyEditCrop() {
            const selection = document.getElementById('editCropSelection');
            const sourceImage = document.getElementById('editCropSourceImage');
            const finalImage = document.getElementById('editFinalCropImage');
            
            // Create a canvas to crop the image with actual dimensions
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            
            const rect = sourceImage.getBoundingClientRect();
            const scaleX = sourceImage.naturalWidth / rect.width;
            const scaleY = sourceImage.naturalHeight / rect.height;
            
            const cropX = selection.offsetLeft * scaleX;
            const cropY = selection.offsetTop * scaleY;
            const cropWidth = selection.offsetWidth * scaleX;
            const cropHeight = selection.offsetHeight * scaleY;
            
            // Use actual crop dimensions
            canvas.width = cropWidth;
            canvas.height = cropHeight;
            
            ctx.drawImage(sourceImage, cropX, cropY, cropWidth, cropHeight, 0, 0, cropWidth, cropHeight);
            
            const croppedImageUrl = canvas.toDataURL('image/jpeg', 0.9);
            finalImage.src = croppedImageUrl;
            
            // Store crop data for form submission
            const cropData = {
                x: cropX,
                y: cropY,
                width: cropWidth,
                height: cropHeight
            };
            
            document.getElementById('editCropData').value = JSON.stringify(cropData);
            
            // Show crop dimensions
            document.getElementById('editCropDimensions').textContent = 
                `Crop size: ${Math.round(cropWidth)}  ${Math.round(cropHeight)} pixels`;
            
            document.getElementById('editFinalCropPreview').style.display = 'block';
            cancelEditCrop();
        }

        function cancelEditCrop() {
            const overlay = document.getElementById('editCropOverlay');
            overlay.style.display = 'none';
            
            document.getElementById('applyEditCropBtn').style.display = 'none';
            document.getElementById('cancelEditCropBtn').style.display = 'none';
            
            cropData.isActive = false;
            
            // Remove event listeners
            document.removeEventListener('mousemove', handleEditCropMouseMove);
            document.removeEventListener('mouseup', handleEditCropMouseUp);
        }

        // Form submission debugging
        document.getElementById('uploadForm').addEventListener('submit', function(e) {
            const cropData = document.getElementById('cropData').value;
            const formData = new FormData(e.target);
            console.log('Form submitting with crop data:', cropData);
            console.log('Form data entries:');
            for (let [key, value] of formData.entries()) {
                console.log(key + ':', value);
            }
        });

        // Initialize
        updateStats();
    </script>
