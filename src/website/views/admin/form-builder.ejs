<!DOCTYPE html>
<html>
  <head>
    <title>Form Builder - 1A 75th</title>
    <meta content="1A Website" property="og:title" />
    <meta content="Welcome to 1A!" property="og:description" />
    <meta content="https://1a75.org/form-builder" property="og:url" />
    <meta content="https://cdn.xanderxx.xyz/1a-logo.png" property="og:image" />
    <meta content="#4b5a2a" data-react-helmet="true" name="theme-color" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <link rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" href="/custom.css" />
  </head>
  <body>
    <%- include('../partials/navbar', { user, active }) %>
    <div class="container mt-5">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Form Builder</h1>
        <div class="d-flex gap-2">
          <a href="/form-builder/create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Create New Form
          </a>
        </div>
      </div>

      <% if (alert) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <% if (error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <!-- Statistics Cards -->
      <div class="row mb-4">
        <div class="col-md-3 mb-3">
          <div class="card text-center">
            <div class="card-body">
              <i class="bi bi-file-earmark-text text-primary" style="font-size: 2rem;"></i>
              <h5 class="card-title mt-2"><%= stats.totalForms %></h5>
              <p class="card-text text-muted">Total Forms</p>
            </div>
          </div>
        </div>
        <div class="col-md-3 mb-3">
          <div class="card text-center">
            <div class="card-body">
              <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
              <h5 class="card-title mt-2"><%= stats.activeForms %></h5>
              <p class="card-text text-muted">Active Forms</p>
            </div>
          </div>
        </div>
        <div class="col-md-3 mb-3">
          <div class="card text-center">
            <div class="card-body">
              <i class="bi bi-chat-dots text-info" style="font-size: 2rem;"></i>
              <h5 class="card-title mt-2"><%= stats.totalResponses %></h5>
              <p class="card-text text-muted">Total Responses</p>
            </div>
          </div>
        </div>
        <div class="col-md-3 mb-3">
          <div class="card text-center">
            <div class="card-body">
              <i class="bi bi-graph-up text-warning" style="font-size: 2rem;"></i>
              <h5 class="card-title mt-2"><%= stats.avgResponses %></h5>
              <p class="card-text text-muted">Avg Responses/Form</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Forms List -->
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Form Templates</h5>
        </div>
        <div class="card-body p-0">
          <% if (forms.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-dark table-hover mb-0">
                <thead>
                  <tr>
                    <th>Form Name</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Responses</th>
                    <th>Created</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% forms.forEach(form => { %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <i class="bi bi-file-earmark-text text-primary me-2"></i>
                          <strong><%= form.name %></strong>
                        </div>
                      </td>
                      <td>
                        <% if (form.description && form.description.length > 50) { %>
                          <span title="<%= form.description %>">
                            <%= form.description.substring(0, 50) %>...
                          </span>
                        <% } else { %>
                          <%= form.description || 'No description' %>
                        <% } %>
                      </td>
                      <td>
                        <% if (form.is_active) { %>
                          <span class="badge bg-success">Active</span>
                        <% } else { %>
                          <span class="badge bg-secondary">Inactive</span>
                        <% } %>
                      </td>
                      <td>
                        <span class="badge bg-info"><%= form.response_count %></span>
                      </td>
                      <td>
                        <%= new Date(form.created_at).toLocaleDateString() %>
                      </td>
                      <td>
                        <div class="btn-group btn-group-sm">
                          <a href="/form-builder/edit/<%= form.id %>" class="btn btn-outline-primary" title="Edit Form">
                            <i class="bi bi-pencil"></i>
                          </a>
                          <a href="/form-builder/responses/<%= form.id %>" class="btn btn-outline-info" title="View Responses">
                            <i class="bi bi-chat-dots"></i>
                          </a>
                          <a href="/form-builder/analytics/<%= form.id %>" class="btn btn-outline-warning" title="Analytics">
                            <i class="bi bi-graph-up"></i>
                          </a>
                          <button class="btn btn-outline-success" onclick="copyFormLink('<%= form.id %>')" title="Copy Link">
                            <i class="bi bi-link-45deg"></i>
                          </button>
                          <form method="POST" action="/form-builder/toggle/<%= form.id %>" class="d-inline">
                            <button type="submit" class="btn btn-outline-secondary" title="Toggle Status">
                              <i class="bi bi-toggle-<%= form.is_active ? 'on' : 'off' %>"></i>
                            </button>
                          </form>
                          <form method="POST" action="/form-builder/delete/<%= form.id %>" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this form? This will also delete all responses.')">
                            <button type="submit" class="btn btn-outline-danger" title="Delete Form">
                              <i class="bi bi-trash"></i>
                            </button>
                          </form>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="text-center py-5">
              <i class="bi bi-file-earmark-text text-muted" style="font-size: 3rem;"></i>
              <p class="text-muted mt-3">No forms created yet</p>
              <a href="/form-builder/create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Create Your First Form
              </a>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="card mt-4">
        <div class="card-header">
          <h5 class="card-title mb-0">Quick Actions</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4 mb-3">
              <a href="/form-builder/create" class="btn btn-primary w-100">
                <i class="bi bi-plus-circle me-2"></i>Create New Form
              </a>
            </div>
            <div class="col-md-4 mb-3">
              <a href="/form-builder/templates" class="btn btn-outline-primary w-100">
                <i class="bi bi-collection me-2"></i>Form Templates
              </a>
            </div>
            <div class="col-md-4 mb-3">
              <a href="/form-builder/analytics" class="btn btn-outline-warning w-100">
                <i class="bi bi-graph-up me-2"></i>All Analytics
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      function copyFormLink(formId) {
        const link = `${window.location.origin}/form/${formId}`;
        navigator.clipboard.writeText(link).then(() => {
          // Show a temporary success message
          const button = event.target.closest('button');
          const originalHTML = button.innerHTML;
          button.innerHTML = '<i class="bi bi-check"></i>';
          button.classList.remove('btn-outline-success');
          button.classList.add('btn-success');
          
          setTimeout(() => {
            button.innerHTML = originalHTML;
            button.classList.remove('btn-success');
            button.classList.add('btn-outline-success');
          }, 2000);
        });
      }
    </script>
  </body>
</html> 