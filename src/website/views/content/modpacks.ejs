<!DOCTYPE html>
<html>
<head>
  <title>Modpack Downloads</title>
  <meta content="1A Website" property="og:title" />
  <meta content="Welcome to 1A!" property="og:description" />
  <meta content="https://1a75.org/modpacks" property="og:url" />
  <meta content="https://cdn.xanderxx.xyz/1a-logo.png" property="og:image" />
  <meta content="#4b5a2a" data-react-helmet="true" name="theme-color" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="icon" href="/favicon.ico">
  <link rel="stylesheet" href="/custom.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <style>
    :root {
      --primary-gold: var(--ranger-gold, #e1b84c);
      --secondary-gold: #DAA520;
      --dark-gold: var(--ranger-gold, #e1b84c);
      --deep-brown: var(--ranger-red, #b12a2c);
      --pure-black: var(--ranger-bg, #241d1d);
      --bg-gradient: linear-gradient(135deg, var(--ranger-bg, #241d1d) 0%, var(--ranger-footer, #291e1e) 100%);
      --card-bg: var(--ranger-card, #2d2d2d);
      --glass-bg: rgba(255, 255, 255, 0.1);
      --border-light: rgba(225, 184, 76, 0.3);
      --shadow-light: 0 8px 32px rgba(0, 0, 0, 0.1);
      --shadow-medium: 0 12px 40px rgba(0, 0, 0, 0.15);
      --shadow-heavy: 0 20px 60px rgba(0, 0, 0, 0.2);
    }

    body {
      background: var(--bg-gradient);
      color: #ffffff;
      min-height: 100vh;
    }

    /* Animations */
    @keyframes fade-in {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes slide-in {
      from { opacity: 0; transform: translateX(-30px); }
      to { opacity: 1; transform: translateX(0); }
    }

    /* Modern Hero Section */
    .modpacks-container {
      animation: fade-in 0.8s ease-out;
    }

    .modpacks-hero {
      background: var(--card-bg);
      padding: 3rem 2rem;
      border-radius: 20px;
      border: 2px solid var(--ranger-gold);
      margin-bottom: 3rem;
      position: relative;
      box-shadow: var(--shadow-heavy);
      overflow: hidden;
    }

    .modpacks-hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #FFD700, #DAA520, #B8860B);
    }

    .modpacks-title {
      color: var(--ranger-gold);
      font-weight: 800;
      font-size: 2.5rem;
      margin-bottom: 1rem;
      text-align: center;
    }

    .modpacks-subtitle {
      color: #cccccc;
      font-size: 1.2rem;
      text-align: center;
      margin-bottom: 0;
    }

    /* Upload Section */
    .upload-section {
      background: rgba(255, 255, 255, 0.05);
      padding: 1.5rem;
      border-radius: 16px;
      border: 1px solid var(--ranger-gold);
      margin-bottom: 2rem;
      position: relative;
      overflow: hidden;
      animation: slide-in 0.6s ease-out 0.2s both;
    }

    .upload-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, #FFD700, #DAA520);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .upload-section:hover::before {
      opacity: 1;
    }

    /* Modpack Cards */
    .modpack-card {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid var(--ranger-gold);
      border-radius: 16px;
      min-width: 260px;
      max-width: 400px;
      margin-bottom: 1.5rem;
      box-shadow: var(--shadow-medium);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      animation: slide-in 0.6s ease-out both;
    }

    .modpack-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, #FFD700, #DAA520);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .modpack-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow-heavy);
    }

    .modpack-card:hover::before {
      opacity: 1;
    }

    .modpack-card .card-body {
      background: transparent;
      border: none;
    }

    .modpack-title {
      color: var(--ranger-gold);
      font-weight: 700;
      font-size: 1.1rem;
    }

    .modpack-date {
      font-size: 0.9rem;
      color: var(--ranger-gold);
      opacity: 0.8;
    }

    .badge {
      background: linear-gradient(135deg, var(--primary-gold) 0%, var(--secondary-gold) 100%) !important;
      color: #000000 !important;
      font-weight: 600;
    }

    /* Buttons */
    .btn-success {
      background: linear-gradient(135deg, var(--ranger-green, #4b5a2a) 0%, var(--ranger-green, #4b5a2a) 100%);
      border: none;
      color: #ffffff;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .btn-success:hover {
      background: linear-gradient(135deg, #5a6b32 0%, #6b7c3a 100%);
      transform: translateY(-2px);
      box-shadow: var(--shadow-medium);
    }

    .btn-info {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid var(--ranger-gold);
      color: var(--ranger-gold);
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .btn-info:hover {
      background: rgba(225, 184, 76, 0.2);
      color: #ffffff;
      transform: translateY(-2px);
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--primary-gold) 0%, var(--secondary-gold) 100%);
      border: none;
      color: #000000;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, var(--dark-gold) 0%, var(--deep-brown) 100%);
      color: #ffffff;
      transform: translateY(-2px);
    }

    /* No Modpacks Message */
    .no-modpacks {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid var(--ranger-gold);
      border-radius: 16px;
      padding: 3rem;
      text-align: center;
      color: #cccccc;
      position: relative;
      overflow: hidden;
    }

    .no-modpacks::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, #FFD700, #DAA520);
    }

    .no-modpacks i {
      color: var(--ranger-gold);
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    /* Modal Updates */
    .modal-content {
      background: var(--ranger-footer);
      border: 2px solid var(--ranger-gold);
      border-radius: 16px;
    }

    .modal-header {
      background: var(--card-bg);
      border-bottom: 1px solid var(--ranger-gold);
      color: var(--ranger-gold);
    }

    .modal-footer {
      background: var(--card-bg);
      border-top: 1px solid var(--ranger-gold);
    }

    .form-control {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid var(--ranger-gold);
      color: #ffffff;
    }

    .form-control:focus {
      background: rgba(255, 255, 255, 0.15);
      border-color: var(--ranger-gold);
      color: #ffffff;
      box-shadow: 0 0 0 0.2rem rgba(225, 184, 76, 0.25);
    }

    .form-label {
      color: var(--ranger-gold);
      font-weight: 600;
    }

    .form-text {
      color: #cccccc;
    }

    /* Staggered animations */
    .modpack-card:nth-child(1) { animation-delay: 0.1s; }
    .modpack-card:nth-child(2) { animation-delay: 0.2s; }
    .modpack-card:nth-child(3) { animation-delay: 0.3s; }
    .modpack-card:nth-child(4) { animation-delay: 0.4s; }
    .modpack-card:nth-child(5) { animation-delay: 0.5s; }
    .modpack-card:nth-child(6) { animation-delay: 0.6s; }

    /* Responsive Design */
    @media (max-width: 768px) {
      .modpacks-hero {
        padding: 2rem 1rem;
      }

      .modpacks-title {
        font-size: 2rem;
      }

      .modpacks-subtitle {
        font-size: 1rem;
      }

      .modpack-card {
        min-width: 100%;
        max-width: 100%;
      }
    }

    @media (max-width: 600px) {
      .modpack-card {
        min-width: 100%;
        max-width: 100%;
      }
    }
  </style>
</head>
<body>
  <%- include("../partials/navbar", { user, active }) %>
  <div class="container mt-5 modpacks-container" id="main-content">
    <!-- Hero Section -->
    <div class="modpacks-hero">
      <h1 class="modpacks-title">
        <i class="bi bi-cloud-download me-2"></i>Modpack Downloads
      </h1>
      <p class="modpacks-subtitle">Download the latest 1A modpacks and stay up to date with our military simulation experience</p>
    </div>
    <% if (alert) { %>
      <div class="alert alert-success"><%= alert %></div>
    <% } %>
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if (isAdmin) { %>
      <div class="upload-section text-end">
        <button class="btn btn-primary" id="openUploadModalBtn">
          <i class="bi bi-cloud-upload me-1"></i> Upload New Modpack
        </button>
      </div>
    <% } %>
    <div class="row">
      <% if (modpacks.length === 0) { %>
        <div class="col-12">
          <div class="no-modpacks">
            <i class="bi bi-cloud-download d-block"></i>
            <h4>No modpacks available yet</h4>
            <p>Check back later for the latest 1A modpacks!</p>
          </div>
        </div>
      <% } %>
      <% modpacks.forEach((mod, idx) => { %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card modpack-card shadow-sm mb-3">
            <div class="card-body p-3">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <div>
                  <div class="modpack-title"><%= mod.filename %></div>
                  <% if (idx === 0) { %>
                    <span class="badge ms-2">Latest</span>
                  <% } %>
                </div>
                <% if (isAdmin) { %>
                  <form action="/modpacks/delete/<%= mod.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Delete this modpack?');">
                    <button type="submit" class="btn btn-sm btn-outline-danger ms-2"><i class="bi bi-trash"></i></button>
                  </form>
                  <button type="button" class="btn btn-sm btn-outline-secondary ms-2 rename-btn" data-id="<%= mod.id %>" data-filename="<%= mod.filename %>">
                    <i class="bi bi-pencil"></i>
                  </button>
                <% } %>
              </div>
              <div class="modpack-date mb-2">
                Uploaded: <%= new Date(mod.uploaded_at).toLocaleString() %>
              </div>
              <a href="/modpacks/download/<%= mod.id %>" class="btn btn-success w-100 d-flex align-items-center justify-content-center">
                <i class="bi bi-download me-2"></i> Download
              </a>
              <button type="button" class="btn btn-info w-100 mt-2 changelog-btn" data-description="<%= mod.description ? mod.description.replace(/"/g, '&quot;') : '' %>">
                <i class="bi bi-info-circle me-1"></i> Changelog / Description
              </button>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Upload Modpack Modal -->
  <div class="modal fade" id="uploadModpackModal" tabindex="-1" aria-labelledby="uploadModpackModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <form class="modal-content" id="uploadModpackForm" action="/modpacks/upload" method="POST" enctype="multipart/form-data">
        <div class="modal-header">
          <h5 class="modal-title" id="uploadModpackModalLabel">
            <i class="bi bi-cloud-upload me-1"></i>Upload New Modpack
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="modfile" class="form-label">Select Modpack (.html file)</label>
            <input type="file" class="form-control" id="modfile" name="modfile" accept=".html" required>
            <div class="form-text">Only .html files are allowed.</div>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Changelog / Description</label>
            <textarea class="form-control" id="description" name="description" rows="3" maxlength="1000" placeholder="Describe what's new or changed in this modpack..."></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-cloud-upload me-1"></i>Upload
          </button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Rename Modpack Modal -->
  <div class="modal fade" id="renameModpackModal" tabindex="-1" aria-labelledby="renameModpackModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <form class="modal-content" id="renameModpackForm" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="renameModpackModalLabel">
            <i class="bi bi-pencil"></i> Rename Modpack
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="newName" class="form-label">New Filename</label>
            <input type="text" class="form-control" id="newName" name="newName" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Rename</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Changelog/Description Modal -->
  <div class="modal fade" id="changelogModal" tabindex="-1" aria-labelledby="changelogModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="changelogModalLabel">
            <i class="bi bi-info-circle"></i> Changelog / Description
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="changelogModalBody">
          <!-- Filled by JS -->
        </div>
      </div>
    </div>
  </div>

  <%- include("../partials/footer") %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    //biome-ignore
    <% if (isAdmin) { %>
    document.getElementById("openUploadModalBtn").onclick = function() {
      new bootstrap.Modal(document.getElementById("uploadModpackModal")).show();
    };

    // Rename button logic
    document.addEventListener("click", function(e) {
      if (e.target.closest(".rename-btn")) {
        const btn = e.target.closest(".rename-btn");
        const id = btn.getAttribute("data-id");
        const filename = btn.getAttribute("data-filename");
        document.getElementById("newName").value = filename;
        document.getElementById("renameModpackForm").action = `/modpacks/rename/${id}`;
        new bootstrap.Modal(document.getElementById("renameModpackModal")).show();
      }
    });
    <% } %>

    // Changelog/Description button logic
    document.addEventListener("click", function(e) {
      if (e.target.closest(".changelog-btn")) {
        const btn = e.target.closest(".changelog-btn");
        const desc = btn.getAttribute("data-description") || "No changelog/description provided.";
        document.getElementById("changelogModalBody").textContent = desc;
        new bootstrap.Modal(document.getElementById("changelogModal")).show();
      }
    });
  </script>
</body>
</html>