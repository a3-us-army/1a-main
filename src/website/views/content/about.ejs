        opacity: 1;
        visibility: visible;
      }

      .carousel-nav-btn:hover {
        background: rgba(225, 184, 76, 1);
        transform: translateY(-50%) scale(1.1);
        box-shadow: var(--shadow-heavy);
      }

      .carousel-nav-btn.prev {
        left: 20px;
      }

      .carousel-nav-btn.next {
        right: 20px;
      }

