    <script>
      // New Carousel functionality
      let currentSlideIndex = 0;
      let autoRotateInterval;
      const galleryImages = <%- JSON.stringify(galleryImages || []) %>;
      let isAnimating = false;
      
      function showSlide(index, direction = 'next') {
        if (index < 0 || index >= galleryImages.length || index === currentSlideIndex || isAnimating) return;
        
        isAnimating = true;
        const slides = document.querySelectorAll('.carousel-slide');
        const currentSlide = slides[currentSlideIndex];
        const nextSlide = slides[index];
        
        // Remove all positioning classes from all slides
        slides.forEach(slide => {
          slide.classList.remove('active', 'prev', 'next');
        });
        
        // Position slides based on direction
        if (direction === 'next') {
          nextSlide.classList.add('next');
          currentSlide.classList.add('active');
        } else {
          nextSlide.classList.add('prev');
          currentSlide.classList.add('active');
        }
        
        // Force reflow
        void nextSlide.offsetWidth;
        
        // Start animation
        requestAnimationFrame(() => {
          if (direction === 'next') {
            currentSlide.classList.remove('active');
            currentSlide.classList.add('prev');
            nextSlide.classList.remove('next');
            nextSlide.classList.add('active');
          } else {
            currentSlide.classList.remove('active');
            currentSlide.classList.add('next');
            nextSlide.classList.remove('prev');
            nextSlide.classList.add('active');
          }
        });
        
        // Clean up after animation
        setTimeout(() => {
          slides.forEach(slide => {
            slide.classList.remove('prev', 'next');
          });
          nextSlide.classList.add('active');
          currentSlideIndex = index;
          isAnimating = false;
        }, 600);
      }
      
      function nextImage() {
        if (isAnimating) return;
        const nextIndex = (currentSlideIndex + 1) % galleryImages.length;
        showSlide(nextIndex, 'next');
        restartAutoRotate();
      }
      
      function previousImage() {
        if (isAnimating) return;
        const prevIndex = currentSlideIndex === 0 ? galleryImages.length - 1 : currentSlideIndex - 1;
        showSlide(prevIndex, 'prev');
        restartAutoRotate();
      }
      
      function openImageModal(index) {
        const image = galleryImages[index];
        const modal = document.getElementById('imageModal');
        const modalImage = document.getElementById('modalImage');
        const modalDescription = document.getElementById('modalDescription');
        
        // Set the image and description
        modalImage.src = `/uploads/gallery/${image.filename}`;
        modalImage.alt = image.original_name;
        modalDescription.textContent = image.description || '';
        
        // Show modal with animation
        modal.style.display = 'block';
        setTimeout(() => {
          modal.classList.add('show');
        }, 10);
        
        // Update current index for modal navigation
        currentSlideIndex = index;
        stopAutoRotate();
      }
      
      function closeImageModal() {
        const modal = document.getElementById('imageModal');
        modal.classList.remove('show');
        setTimeout(() => {
          modal.style.display = 'none';
        }, 300);
        startAutoRotate();
      }
      
      function nextModalImage() {
        const nextIndex = (currentSlideIndex + 1) % galleryImages.length;
        showModalImage(nextIndex);
      }
      
      function previousModalImage() {
        const prevIndex = currentSlideIndex === 0 ? galleryImages.length - 1 : currentSlideIndex - 1;
        showModalImage(prevIndex);
      }
      
      function showModalImage(index) {
        if (index < 0 || index >= galleryImages.length) return;
        
        currentSlideIndex = index;
        const image = galleryImages[index];
        const modalImage = document.getElementById('modalImage');
        const modalDescription = document.getElementById('modalDescription');
        
        // Update modal content
        modalImage.src = `/uploads/gallery/${image.filename}`;
        modalImage.alt = image.original_name;
        modalDescription.textContent = image.description || '';
        
        // Update carousel to match modal
        updateCarouselToIndex(index);
      }
      
      function updateCarouselToIndex(index) {
        const slides = document.querySelectorAll('.carousel-slide');
        slides.forEach((slide, i) => {
          slide.classList.remove('active');
          if (i === index) {
            slide.classList.add('active');
          }
        });
        currentSlideIndex = index;
      }
      
      function startAutoRotate() {
        if (galleryImages.length > 1) {
          stopAutoRotate();
          autoRotateInterval = setInterval(nextImage, 5000);
        }
      }
      
      function stopAutoRotate() {
        if (autoRotateInterval) {
          clearInterval(autoRotateInterval);
          autoRotateInterval = null;
        }
      }
      
      function restartAutoRotate() {
        stopAutoRotate();
        startAutoRotate();
      }
      
      // Initialize carousel
      if (galleryImages.length > 0) {
        // Set up initial state
        const slides = document.querySelectorAll('.carousel-slide');
        slides.forEach((slide, index) => {
          if (index === 0) {
            slide.classList.add('active');
          } else {
            slide.classList.remove('active');
          }
        });
        
        startAutoRotate();
        
        // Pause auto-rotation on hover
        const carouselContainer = document.querySelector('.carousel-container');
        if (carouselContainer) {
          carouselContainer.addEventListener('mouseenter', stopAutoRotate);
          carouselContainer.addEventListener('mouseleave', () => {
            if (!document.getElementById('imageModal').classList.contains('show')) {
              startAutoRotate();
            }
          });
        }
      }
      
      // Keyboard navigation
      document.addEventListener('keydown', (e) => {
        if (document.getElementById('imageModal').style.display === 'block') {
          if (e.key === 'Escape') {
            closeImageModal();
          } else if (e.key === 'ArrowLeft') {
            previousImage();
          } else if (e.key === 'ArrowRight') {
            nextImage();
          }
        }
      });

      // Add staggered animation to sections
      document.addEventListener('DOMContentLoaded', function() {
        const sections = document.querySelectorAll('.slide-in');
        sections.forEach((section, index) => {
          section.style.animationDelay = `${index * 0.2}s`;
        });
      });
    </script>
