      .gallery-hero-thumbnail:hover {
        transform: scale(1.1);
        border-color: var(--primary-gold);
      }

      .gallery-hero-thumbnail.active {
        border-color: var(--primary-gold);
        box-shadow: 0 0 15px rgba(225, 184, 76, 0.5);
      }

      /* Alpha Company Section Styles */
      .alpha-company-section {
        background: var(--ranger-card);
        border-radius: 16px;
        padding: 1rem;
        margin: 0.5rem 0;
        box-shadow: var(--shadow-medium);
