      .carousel-track {
        position: relative;
        width: 100%;
        height: 100%;
      }

      .carousel-slide {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        transform: translateX(100%);
        transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 1;
      }

      .carousel-slide.active {
        opacity: 1;
        transform: translateX(0);
        z-index: 2;
      }

      .carousel-slide.prev {
        transform: translateX(-100%);
        opacity: 0;
      }

      .carousel-slide.next {
        transform: translateX(100%);
        opacity: 0;
      }

