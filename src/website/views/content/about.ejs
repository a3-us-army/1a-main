        animation: none;
        transform: scale(1.1) rotate(5deg);
        box-shadow: 0 6px 20px rgba(225, 184, 76, 0.4);
      }

      /* Gallery Hero Section Styles */
      .gallery-hero-section {
        background: var(--ranger-card);
        padding: 1rem 0;
