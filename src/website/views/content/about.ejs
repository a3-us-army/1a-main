<!DOCTYPE html>
<html lang="en">
  <head>
    <title>About 1A – 1st Battalion, 75th Ranger Regiment</title>
    <meta content="1A Website" property="og:title" />
    <meta content="Welcome to 1A!" property="og:description" />
    <meta content="https://1a75.org/about" property="og:url" />
    <meta content="https://cdn.xanderxx.xyz/1a-logo.png" property="og:image" />
    <meta content="#4b5a2a" data-react-helmet="true" name="theme-color" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <link rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" href="/custom.css" />

    <style>
      :root {
        --primary-gold: #DAA520;
        --secondary-gold: #8B4513;
        --dark-gold: #B8860B;
        --deep-brown: #654321;
        --pure-black: #000000;
        --bg-gradient: linear-gradient(135deg, #8B4513 0%, #000000 100%);
        --card-bg: linear-gradient(135deg, rgba(30, 30, 40, 0.95) 0%, rgba(20, 20, 30, 0.9) 100%);
        --glass-bg: rgba(255, 255, 255, 0.1);
        --border-light: rgba(255, 255, 255, 0.2);
        --shadow-light: 0 8px 32px rgba(0, 0, 0, 0.1);
        --shadow-medium: 0 12px 40px rgba(0, 0, 0, 0.15);
        --shadow-heavy: 0 20px 60px rgba(0, 0, 0, 0.2);
      }

      body {
        background: var(--bg-gradient);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #ffffff;
      }

      .about-container {
        padding: 3rem 0;
      }

      .about-hero {
        background: var(--card-bg);
        border-radius: 24px;
        box-shadow: var(--shadow-heavy);
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        position: relative;
        margin-bottom: 3rem;
      }

      .about-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-gold), var(--secondary-gold), var(--dark-gold));
      }

      .hero-header {
        background: linear-gradient(135deg, rgba(40, 40, 50, 0.8) 0%, rgba(30, 30, 40, 0.6) 100%);
        padding: 3rem 2rem;
        text-align: center;
        position: relative;
      }

      .hero-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--primary-gold);
        margin-bottom: 1rem;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        line-height: 1.2;
      }

      .hero-subtitle {
        background: linear-gradient(135deg, rgba(40, 40, 50, 0.8) 0%, rgba(30, 30, 40, 0.6) 100%);
        border-radius: 16px;
        padding: 2rem;
        margin: 2rem auto;
        max-width: 600px;
        box-shadow: var(--shadow-medium);
        border: 1px solid rgba(255, 255, 255, 0.1);
      }

      .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 1rem;
      }

      .info-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
      }

      .info-item:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-2px);
        box-shadow: var(--shadow-light);
        border-color: rgba(255, 255, 255, 0.2);
      }

      .info-item i {
        color: var(--primary-gold);
        font-size: 1.2rem;
        min-width: 20px;
      }

      .info-item strong {
        color: var(--primary-gold);
        font-weight: 600;
      }

      .info-item span {
        color: #e0e0e0;
        font-weight: 500;
      }

      .about-content {
        padding: 3rem 2rem;
      }

      .section-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--primary-gold);
        margin-bottom: 1.5rem;
        position: relative;
        padding-bottom: 0.5rem;
      }

      .section-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 60px;
        height: 3px;
        background: linear-gradient(90deg, var(--primary-gold), var(--secondary-gold));
        border-radius: 2px;
      }

      .section-content {
        color: #e0e0e0;
        line-height: 1.8;
        font-size: 1.1rem;
        margin-bottom: 2rem;
      }

      .feature-list {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .feature-list li {
        background: rgba(255, 255, 255, 0.05);
        margin-bottom: 1rem;
        padding: 1.5rem;
        border-radius: 12px;
        border-left: 4px solid var(--primary-gold);
        transition: all 0.3s ease;
        position: relative;
      }

      .feature-list li:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateX(5px);
        box-shadow: var(--shadow-light);
      }

      .feature-list li::before {
        content: '▸';
        color: var(--primary-gold);
        font-weight: bold;
        position: absolute;
        left: -10px;
        top: 50%;
        transform: translateY(-50%);
        background: var(--card-bg);
        padding: 0 5px;
      }

      .about-link {
        color: var(--primary-gold);
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(218, 165, 32, 0.1);
        border-radius: 8px;
        border: 1px solid rgba(218, 165, 32, 0.3);
      }

      .about-link:hover {
        color: #ffffff;
        background: rgba(218, 165, 32, 0.2);
        border-color: var(--primary-gold);
        transform: translateY(-2px);
        box-shadow: var(--shadow-light);
        text-decoration: none;
      }

      .about-cta {
        text-align: center;
        margin-top: 3rem;
        padding: 2rem;
        background: linear-gradient(135deg, rgba(218, 165, 32, 0.1) 0%, rgba(139, 69, 19, 0.1) 100%);
        border-radius: 16px;
        border: 1px solid rgba(218, 165, 32, 0.3);
      }

      .cta-button {
        background: linear-gradient(135deg, var(--primary-gold) 0%, var(--secondary-gold) 100%);
        color: #000;
        font-size: 1.2rem;
        font-weight: 700;
        padding: 1rem 2.5rem;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
        box-shadow: 0 6px 20px rgba(218, 165, 32, 0.4);
        border: none;
        position: relative;
        overflow: hidden;
      }

      .cta-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.6s ease;
      }

      .cta-button:hover::before {
        left: 100%;
      }

      .cta-button:hover {
        background: linear-gradient(135deg, var(--dark-gold) 0%, var(--deep-brown) 100%);
        color: #000;
        transform: translateY(-3px);
        box-shadow: 0 12px 30px rgba(218, 165, 32, 0.5);
        text-decoration: none;
      }

      .cta-button i {
        font-size: 1.3rem;
        transition: transform 0.3s ease;
      }

      .cta-button:hover i {
        transform: scale(1.2);
      }

      /* Gallery Styles */
      .gallery-section {
        margin-top: 4rem;
        margin-bottom: 4rem;
      }

      .gallery-title {
        color: var(--primary-gold);
        font-weight: 800;
        font-size: 2.2rem;
        text-align: center;
        margin-bottom: 3rem;
        position: relative;
        padding-bottom: 1rem;
      }

      .gallery-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-gold), var(--secondary-gold));
        border-radius: 2px;
      }

      .gallery-main-container {
        position: relative;
        max-width: 900px;
        margin: 0 auto;
        background: var(--card-bg);
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: var(--shadow-heavy);
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
      }

      .gallery-main-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-gold), var(--secondary-gold), var(--dark-gold));
        border-radius: 20px 20px 0 0;
      }

      .gallery-main-image-container {
        position: relative;
        margin-bottom: 2rem;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: var(--shadow-medium);
      }

      .gallery-main-image {
        width: 100%;
        height: 450px;
        object-fit: cover;
        transition: transform 0.3s ease;
        cursor: pointer;
      }

      .gallery-main-image:hover {
        transform: scale(1.02);
      }

      .gallery-nav-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(218, 165, 32, 0.9);
        border: none;
        color: #000;
        font-size: 1.5rem;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        cursor: pointer;
        transition: all 0.3s ease;
        z-index: 10;
        box-shadow: var(--shadow-medium);
      }

      .gallery-nav-btn:hover {
        background: rgba(218, 165, 32, 1);
        transform: translateY(-50%) scale(1.1);
        box-shadow: var(--shadow-heavy);
      }

      .gallery-nav-btn.prev {
        left: 20px;
      }

      .gallery-nav-btn.next {
        right: 20px;
      }

      .gallery-thumbnails {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 2rem;
      }

      .gallery-thumbnail {
        width: 100px;
        height: 75px;
        object-fit: cover;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 3px solid transparent;
        box-shadow: var(--shadow-light);
      }

      .gallery-thumbnail:hover {
        transform: scale(1.1);
        border-color: var(--primary-gold);
        box-shadow: var(--shadow-medium);
      }

      .gallery-thumbnail.active {
        border-color: var(--primary-gold);
        box-shadow: 0 0 20px rgba(218, 165, 32, 0.6);
        transform: scale(1.05);
      }

      /* Image Modal */
      .image-modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.95);
        backdrop-filter: blur(10px);
      }

      .image-modal-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 85%;
        max-height: 85%;
        background: var(--card-bg);
        border-radius: 20px;
        padding: 3rem;
        box-shadow: var(--shadow-heavy);
        border: 1px solid rgba(255, 255, 255, 0.1);
      }

      .image-modal img {
        width: auto;
        max-width: 100%;
        max-height: 70vh;
        object-fit: contain;
        border-radius: 16px;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-medium);
      }

      .image-modal-description {
        color: #ffffff;
        font-size: 1.2rem;
        line-height: 1.6;
        text-align: center;
        max-width: 700px;
        word-wrap: break-word;
      }

      .image-modal-close {
        position: absolute;
        top: 1.5rem;
        right: 1.5rem;
        background: rgba(218, 165, 32, 0.9);
        border: none;
        color: #000;
        font-size: 1.5rem;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-medium);
      }

      .image-modal-close:hover {
        background: rgba(218, 165, 32, 1);
        transform: scale(1.1);
        box-shadow: var(--shadow-heavy);
      }

      .fade-in {
        animation: fadeIn 0.8s ease-out;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .slide-in {
        animation: slideIn 0.6s ease-out;
      }

      @keyframes slideIn {
        from {
          opacity: 0;
          transform: translateX(-40px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @media (max-width: 768px) {
        .about-container {
          padding: 2rem 0;
        }

        .hero-title {
          font-size: 2rem;
        }

        .hero-header {
          padding: 2rem 1rem;
        }

        .about-content {
          padding: 2rem 1rem;
        }

        .info-grid {
          grid-template-columns: 1fr;
        }

        .gallery-nav-btn {
          width: 50px;
          height: 50px;
          font-size: 1.2rem;
        }

        .gallery-nav-btn.prev {
          left: 10px;
        }

        .gallery-nav-btn.next {
          right: 10px;
        }

        .gallery-main-image {
          height: 300px;
        }

        .gallery-thumbnail {
          width: 80px;
          height: 60px;
        }

        .gallery-main-container {
          padding: 1.5rem;
        }

        .image-modal-content {
          max-width: 95%;
          padding: 2rem;
        }
      }
    </style>
  </head>
  <body>
    <%- include("../partials/navbar", { user, active }) %>
    
    <main id="main-content">
      <div class="container about-container">
        <!-- Hero Section -->
        <div class="about-hero fade-in">
          <div class="hero-header">
            <h1 class="hero-title">
              <i class="bi bi-shield-check me-3"></i>
              1A – 1st Battalion, 75th Ranger Regiment
            </h1>
            <p class="text-light mb-0">Alpha Company [NEW | NA]</p>
            
            <div class="hero-subtitle">
              <div class="info-grid">
                <div class="info-item">
                  <i class="bi bi-flag"></i>
                  <strong>Type:</strong> <span>U.S. Army Ranger Milsim</span>
                </div>
                <div class="info-item">
                  <i class="bi bi-clock"></i>
                  <strong>Timezone:</strong> <span>US Central (CST/CDT)</span>
                </div>
                <div class="info-item">
                  <i class="bi bi-gear"></i>
                  <strong>Operations:</strong> <span>Realism-focused, Custom Zeus</span>
                </div>
                <div class="info-item">
                  <i class="bi bi-controller"></i>
                  <strong>Game:</strong> <span>Arma 3</span>
                </div>
                <div class="info-item">
                  <i class="bi bi-mic"></i>
                  <strong>Comms:</strong> <span>TeamSpeak + ACRE2</span>
                </div>
              </div>
            </div>
          </div>

          <div class="about-content">
            <section class="slide-in">
              <h2 class="section-title">
                <i class="bi bi-info-circle me-2"></i>
                What We're About
              </h2>
              <div class="section-content">
                <p>
                  1A is a MILSIM unit modeled after the 75th Ranger Regiment during
                  the Global War on Terror, specifically around the 2009 era. We
                  emphasize tight coordination, disciplined operations, and high
                  standards without the unnecessary roleplay. This isn't a "yes sir,
                  no sir" unit — we've cut out the formalities to focus on what
                  matters: using Arma 3 to its full tactical potential.
                </p>
                <p>
                  <a class="about-link" href="https://1a75.org/personnel" target="_blank">
                    <i class="bi bi-list-task"></i>
                    Click Here To Find Out What Roles are Available!
                  </a>
                </p>
              </div>
            </section>

            <section class="slide-in">
              <h2 class="section-title">
                <i class="bi bi-calendar-event me-2"></i>
                Schedule
              </h2>
              <ul class="feature-list">
                <li>
                  <strong>Main Ops:</strong> Friday and Saturday Evening (1900 CST)
                </li>
                <li>
                  <strong>Attendance:</strong> Be present or check in. Communication
                  is expected. Real life comes first, but accountability still
                  matters.
                </li>
              </ul>
            </section>

            <section class="slide-in">
              <h2 class="section-title">
                <i class="bi bi-check-circle me-2"></i>
                Requirements
              </h2>
              <ul class="feature-list">
                <li>
                  <strong>Arma 3</strong> with required mods (RHS, ACE, ACRE2, etc.)
                  <br><small class="text-muted">Have storage space to install modpack ~76.16 Gb</small>
                </li>
                <li>
                  <strong>Working mic + headset</strong> for clear communication
                </li>
                <li>
                  <strong>Discipline</strong> - Ability to follow orders, stay disciplined, and not screw around
                </li>
                <li>
                  <strong>English proficiency</strong> - Must speak and be able to understand fluent English
                </li>
              </ul>
            </section>

            <section class="slide-in">
              <h2 class="section-title">
                <i class="bi bi-people me-2"></i>
                How to Join
              </h2>
              <div class="section-content">
                <p>
                  Jump into our Discord, check out the rules, and submit an
                  application.
                </p>
                <p>
                  <a class="about-link" href="https://discord.gg/RAQwxfbu5H" target="_blank">
                    <i class="bi bi-discord"></i>
                    Discord: Click Here!
                  </a>
                </p>
              </div>
            </section>

            <div class="about-cta slide-in">
              <a href="/apply" class="cta-button">
                <i class="bi bi-file-earmark-text"></i>
                Submit Your Application
              </a>
            </div>
          </div>
        </div>

        <!-- Photo Gallery Section -->
        <% if (galleryImages && galleryImages.length > 0) { %>
        <div class="gallery-section fade-in">
          <h2 class="gallery-title">
            <i class="bi bi-images me-2"></i>Photo Gallery
          </h2>
          
          <div class="gallery-main-container">
            <div class="gallery-main-image-container">
              <img id="mainImage" src="/uploads/gallery/<%= galleryImages[0].filename %>" alt="<%= galleryImages[0].original_name %>" class="gallery-main-image" onclick="openImageModal(0)">
              <button class="gallery-nav-btn prev" onclick="previousImage()">
                <i class="bi bi-chevron-left"></i>
              </button>
              <button class="gallery-nav-btn next" onclick="nextImage()">
                <i class="bi bi-chevron-right"></i>
              </button>
            </div>
            
            <div class="gallery-thumbnails">
              <% galleryImages.forEach((image, index) => { %>
                <img src="/uploads/gallery/<%= image.filename %>" 
                     alt="<%= image.original_name %>" 
                     class="gallery-thumbnail <%= index === 0 ? 'active' : '' %>"
                     onclick="showImage(<%= index %>)"
                     data-index="<%= index %>">
              <% }) %>
            </div>
          </div>
        </div>
        <% } %>
      </div>

      <!-- Image Modal -->
      <div id="imageModal" class="image-modal" onclick="closeImageModal()">
        <div class="image-modal-content" onclick="event.stopPropagation()">
          <button class="image-modal-close" onclick="closeImageModal()">
            <i class="bi bi-x"></i>
          </button>
          <img id="modalImage" src="" alt="">
          <div id="modalDescription" class="image-modal-description"></div>
        </div>
      </div>
    </main>

    <%- include("../partials/footer") %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
      // Gallery functionality
      let currentImageIndex = 0;
      let autoRotateInterval;
      const galleryImages = <%- JSON.stringify(galleryImages || []) %>;
      
      function showImage(index) {
        if (index < 0 || index >= galleryImages.length) return;
        
        currentImageIndex = index;
        const image = galleryImages[index];
        
        // Update main image
        document.getElementById('mainImage').src = `/uploads/gallery/${image.filename}`;
        document.getElementById('mainImage').alt = image.original_name;
        
        // Update thumbnails
        document.querySelectorAll('.gallery-thumbnail').forEach((thumb, i) => {
          thumb.classList.toggle('active', i === index);
        });
        
        // Update main image onclick
        document.getElementById('mainImage').onclick = () => openImageModal(index);
      }
      
      function nextImage() {
        const nextIndex = (currentImageIndex + 1) % galleryImages.length;
        showImage(nextIndex);
        restartAutoRotate();
      }
      
      function previousImage() {
        const prevIndex = currentImageIndex === 0 ? galleryImages.length - 1 : currentImageIndex - 1;
        showImage(prevIndex);
        restartAutoRotate();
      }
      
      function openImageModal(index) {
        const image = galleryImages[index];
        document.getElementById('modalImage').src = `/uploads/gallery/${image.filename}`;
        document.getElementById('modalImage').alt = image.original_name;
        document.getElementById('modalDescription').textContent = image.description || '';
        document.getElementById('imageModal').style.display = 'block';
        stopAutoRotate();
      }
      
      function closeImageModal() {
        document.getElementById('imageModal').style.display = 'none';
        startAutoRotate();
      }
      
      function startAutoRotate() {
        if (galleryImages.length > 1) {
          stopAutoRotate();
          autoRotateInterval = setInterval(nextImage, 5000);
        }
      }
      
      function stopAutoRotate() {
        if (autoRotateInterval) {
          clearInterval(autoRotateInterval);
          autoRotateInterval = null;
        }
      }
      
      function restartAutoRotate() {
        stopAutoRotate();
        startAutoRotate();
      }
      
      // Initialize gallery
      if (galleryImages.length > 0) {
        startAutoRotate();
        
        // Pause auto-rotation on hover
        const mainContainer = document.querySelector('.gallery-main-container');
        if (mainContainer) {
          mainContainer.addEventListener('mouseenter', stopAutoRotate);
          mainContainer.addEventListener('mouseleave', () => {
            if (document.getElementById('imageModal').style.display === 'none') {
              startAutoRotate();
            }
          });
        }
      }
      
      // Keyboard navigation
      document.addEventListener('keydown', (e) => {
        if (document.getElementById('imageModal').style.display === 'block') {
          if (e.key === 'Escape') {
            closeImageModal();
          } else if (e.key === 'ArrowLeft') {
            previousImage();
          } else if (e.key === 'ArrowRight') {
            nextImage();
          }
        }
      });

      // Add staggered animation to sections
      document.addEventListener('DOMContentLoaded', function() {
        const sections = document.querySelectorAll('.slide-in');
        sections.forEach((section, index) => {
          section.style.animationDelay = `${index * 0.2}s`;
        });
      });
    </script>
  </body>
</html>
