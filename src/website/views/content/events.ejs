<!DOCTYPE html>
<html>
  <head>
    <title>Events Dashboard</title>
    <meta content="1A Website" property="og:title" />
    <meta content="Welcome to 1A!" property="og:description" />
    <meta content="https://1a75.org/events" property="og:url" />
    <meta content="https://cdn.xanderxx.xyz/1a-logo.png" property="og:image" />
    <meta content="#4b5a2a" data-react-helmet="true" name="theme-color" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" href="/custom.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <style>
      :root {
        --primary-gold: var(--ranger-gold, #e1b84c);
        --secondary-gold: var(--ranger-green, #4b5a2a);
        --dark-gold: var(--ranger-gold, #e1b84c);
        --deep-brown: var(--ranger-red, #b12a2c);
        --pure-black: var(--ranger-bg, #241d1d);
        --bg-gradient: linear-gradient(135deg, var(--ranger-bg, #241d1d) 0%, var(--ranger-footer, #291e1e) 100%);
        --card-bg: var(--ranger-card, #2d2d2d);
        --glass-bg: rgba(255, 255, 255, 0.1);
        --border-light: rgba(225, 184, 76, 0.3);
        --shadow-light: 0 8px 32px rgba(0, 0, 0, 0.1);
        --shadow-medium: 0 12px 40px rgba(0, 0, 0, 0.15);
        --shadow-heavy: 0 20px 60px rgba(0, 0, 0, 0.2);
      }

      body {
        background: var(--bg-gradient);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #ffffff;
      }

      .events-container {
        padding: 1rem 0;
      }

      .events-hero {
        background: var(--card-bg);
        border-radius: 24px;
        box-shadow: var(--shadow-heavy);
        overflow: hidden;
        border: 2px solid var(--ranger-gold);
        backdrop-filter: blur(20px);
        position: relative;
        margin-bottom: 3rem;
        padding: 2rem;
        text-align: center;
      }

      .events-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #FFD700, #DAA520, #B8860B);
      }

      .events-title {
        font-size: 2.2rem;
        font-weight: 800;
        color: var(--primary-gold);
        margin-bottom: 0.5rem;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        line-height: 1.2;
      }

      .events-subtitle {
        font-size: 1.1rem;
        color: #e0e0e0;
        opacity: 0.9;
        margin-bottom: 0;
        line-height: 1.6;
      }

      /* Section headers */
      .section-header {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        border: 1px solid var(--ranger-gold);
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-medium);
        position: relative;
        overflow: hidden;
      }

      .section-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #FFD700, #DAA520);
      }

      .section-title {
        font-size: 1.6rem;
        font-weight: 700;
        color: var(--primary-gold);
        margin-bottom: 0;
      }

      /* Event cards */
      .event-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid var(--ranger-gold);
        border-radius: 16px;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-medium);
        margin-bottom: 1.5rem;
        position: relative;
        overflow: hidden;
      }

      .event-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #FFD700, #DAA520);
        transform: scaleX(0);
        transition: transform 0.3s ease;
      }

      .event-card:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-4px) scale(1.02);
        box-shadow: var(--shadow-heavy);
        border-color: var(--ranger-gold);
      }

      .event-card:hover::before {
        transform: scaleX(1);
      }

      .event-datebox {
        min-width: 54px;
        max-width: 60px;
        background: var(--ranger-footer);
        border-radius: 12px;
        padding: 0.5rem 0.25rem;
        margin-left: 0.5rem;
        box-shadow: var(--shadow-medium);
        border: 2px solid var(--ranger-gold);
        transition: all 0.3s ease;
      }

      .event-card:hover .event-datebox {
        transform: scale(1.05);
        box-shadow: var(--shadow-heavy);
      }

      .event-datebox .event-day {
        font-size: 0.75rem;
        color: #e0e0e0;
        font-weight: 600;
        letter-spacing: 0.05em;
      }

      .event-datebox .event-date {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--ranger-gold);
        line-height: 1.1;
      }

      .event-datebox .event-month {
        font-size: 0.8rem;
        color: #ffffff;
        font-weight: 600;
        line-height: 1.1;
      }

      .event-datebox .event-timeblock {
        font-size: 0.8rem;
        font-weight: 600;
        background: var(--ranger-gold);
        color: #000000;
        border-radius: 6px;
        padding: 0.1rem 0.3rem;
        display: inline-block;
        margin-top: 0.25rem;
      }

      .event-info {
        padding-left: 0 !important;
        padding-right: 0 !important;
        color: #ffffff;
      }

      .event-title {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--ranger-gold);
        margin-bottom: 0.5rem;
      }

      .event-meta {
        color: #e0e0e0;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
      }

      .event-meta i {
        color: var(--ranger-gold);
        margin-right: 0.5rem;
      }

      .event-id {
        margin: 0.5rem 0;
      }

      .event-id small {
        color: #e0e0e0;
        opacity: 0.8;
      }

      .event-id code {
        background: rgba(225, 184, 76, 0.2);
        color: var(--ranger-gold);
        padding: 0.1rem 0.3rem;
        border-radius: 4px;
        font-size: 0.85rem;
      }

      /* Admin controls */
      .admin-controls {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
      }

      /* No events message */
      .no-events {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid var(--ranger-gold);
        border-radius: 16px;
        padding: 2rem;
        text-align: center;
        color: #e0e0e0;
        box-shadow: var(--shadow-medium);
      }

      /* Past events styling */
      .past-events-section {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 2px solid var(--ranger-gold);
        position: relative;
      }

      .past-events-section::before {
        content: '';
        position: absolute;
        top: -2px;
        left: 0;
        width: 100px;
        height: 4px;
        background: linear-gradient(90deg, #FFD700, #DAA520);
      }

      /* Animations */
      .fade-in {
        animation: fadeIn 0.8s ease-out;
      }

      .slide-in {
        animation: slideIn 0.6s ease-out;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes slideIn {
        from {
          opacity: 0;
          transform: translateX(-40px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      /* Staggered card animations */
      .event-card {
        animation: slideIn 0.6s ease-out;
        animation-fill-mode: both;
      }

      .event-card:nth-child(1) { animation-delay: 0.1s; }
      .event-card:nth-child(2) { animation-delay: 0.2s; }
      .event-card:nth-child(3) { animation-delay: 0.3s; }
      .event-card:nth-child(4) { animation-delay: 0.4s; }
      .event-card:nth-child(5) { animation-delay: 0.5s; }
      .event-card:nth-child(6) { animation-delay: 0.6s; }
      /* Responsive design */
      @media (max-width: 768px) {
        .events-container {
          padding: 1rem 0;
        }

        .events-hero {
          padding: 1.5rem;
          margin-bottom: 2rem;
        }

        .events-title {
          font-size: 1.8rem;
        }

        .events-subtitle {
          font-size: 1rem;
        }

        .section-header {
          padding: 1rem;
          margin-bottom: 1.5rem;
        }

        .section-title {
          font-size: 1.4rem;
        }

        .event-card {
          margin-bottom: 1rem;
        }

        .event-title {
          font-size: 1.1rem;
        }

        .event-meta,
        .event-id {
          font-size: 0.9rem;
        }

        .admin-controls {
          flex-direction: column !important;
          gap: 0.4rem !important;
        }

        .admin-controls .btn {
          width: 100%;
        }

        .event-datebox {
          margin-left: 0.3rem;
          min-width: 45px;
          max-width: 50px;
          padding: 0.3rem 0.15rem;
        }

        .event-datebox .event-date {
          font-size: 1rem;
        }
      }

      @media (max-width: 480px) {
        .events-hero {
          padding: 1rem;
        }

        .events-title {
          font-size: 1.6rem;
        }

        .section-header {
          padding: 0.75rem;
        }

        .event-datebox {
          min-width: 40px;
          max-width: 45px;
          padding: 0.25rem 0.1rem;
        }

        .event-datebox .event-date {
          font-size: 0.9rem;
        }

        .event-datebox .event-timeblock {
          font-size: 0.7rem;
        }
      }
    </style>
  </head>
  <body>
    <%- include("../partials/navbar", { user, active }) %>
    <div id="main-content">
      <div class="container events-container">
        <!-- Hero Section -->
        <div class="events-hero fade-in">
          <h1 class="events-title">
            <i class="bi bi-calendar-event me-3"></i>
            Events Center
          </h1>
          <p class="events-subtitle">
            Mission schedules, training events, and operations coordination for 1A personnel.
          </p>
        </div>

        <!-- Alert Messages -->
        <% if (alert) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>
        <% if (error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>

        <!-- Upcoming Events Section -->
        <div class="section-header slide-in">
          <div class="d-flex justify-content-between align-items-center">
            <h2 class="section-title">
              <i class="bi bi-clock me-2"></i>Upcoming Events
            </h2>
            <% if (user && isAdmin) { %>
            <a href="/events/new" class="btn btn-primary">
              <i class="bi bi-plus-circle me-2"></i>Create Event
            </a>
            <% } %>
          </div>
        </div>
        <div class="row">
          <% if (events.length === 0) { %>
          <div class="col-12">
            <div class="no-events">
              <i class="bi bi-calendar-x display-4 mb-3" style="color: var(--ranger-gold);"></i>
              <h5>No events scheduled yet</h5>
              <p class="mb-0">Check back later for upcoming missions and training events.</p>
            </div>
          </div>
          <% } %>
          <% events.forEach(event => { %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="card event-card">
              <div class="card-body p-3 d-flex align-items-center">
                <!-- Event info (left) -->
                <div class="flex-grow-1 event-info">
                  <div class="event-title">
                    <%= event.title %>
                  </div>
                  <div class="event-meta">
                    <i class="bi bi-geo-alt"></i>
                    <span><%= event.location || "N/A" %></span>
                  </div>
                  <div class="event-id">
                    <small>Event ID: <code><%= event.id %></code></small>
                  </div>
                  <% if (user && isAdmin) { %>
                  <div class="admin-controls">
                    <a
                      href="/events/edit/<%= event.id %>"
                      class="btn btn-sm btn-outline-primary"
                    >
                      <i class="bi bi-pencil-square me-1"></i>Edit
                    </a>
                    <form
                      action="/events/delete/<%= event.id %>"
                      method="POST"
                      style="display: inline"
                      onsubmit="return confirm('Delete this event?');"
                    >
                      <button
                        type="submit"
                        class="btn btn-sm btn-outline-danger"
                      >
                        <i class="bi bi-trash me-1"></i>Delete
                      </button>
                    </form>
                  </div>
                  <% } %>
                </div>
                <!-- Date/time block (right) -->
                <div
                  class="event-datebox text-center ms-2 flex-shrink-0"
                  data-utc="<%= event.time %>"
                >
                  <div class="event-day text-uppercase"></div>
                  <div class="event-date"></div>
                  <div class="event-month"></div>
                  <div class="event-timeblock mt-1"></div>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>

        <!-- Past Events Section -->
        <% if (pastEvents && pastEvents.length) { %>
        <div class="past-events-section">
          <div class="section-header slide-in">
            <h2 class="section-title">
              <i class="bi bi-archive me-2"></i>Past Events
            </h2>
          </div>
          <div class="row">
            <% pastEvents.forEach(event => { %>
            <div class="col-12 col-md-6 col-lg-4">
              <div class="card event-card">
                <div class="card-body p-3 d-flex align-items-center">
                  <div class="flex-grow-1 event-info">
                    <div class="event-title">
                      <%= event.title %>
                    </div>
                    <div class="event-meta">
                      <i class="bi bi-geo-alt"></i>
                      <span><%= event.location || "N/A" %></span>
                    </div>
                    <div class="event-id">
                      <small>Event ID: <code><%= event.id %></code></small>
                    </div>
                  </div>
                  <div
                    class="event-datebox text-center ms-2 flex-shrink-0"
                    data-utc="<%= event.time %>"
                  >
                    <div class="event-day text-uppercase"></div>
                    <div class="event-date"></div>
                    <div class="event-month"></div>
                    <div class="event-timeblock mt-1"></div>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <%- include("../partials/footer") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.event-datebox').forEach(function (box) {
          const utc = box.getAttribute('data-utc');
          if (utc) {
            const date = new Date(Number(utc) * 1000);
            const days = ['SUN', 'MON', 'TUE', 'WED', 'THU', 'FRI', 'SAT'];
            const months = [
              'Jan',
              'Feb',
              'Mar',
              'Apr',
              'May',
              'Jun',
              'Jul',
              'Aug',
              'Sep',
              'Oct',
              'Nov',
              'Dec',
            ];
            box.querySelector('.event-day').textContent = days[date.getDay()];
            box.querySelector('.event-date').textContent = date.getDate();
            box.querySelector('.event-month').textContent =
              months[date.getMonth()];
            // Format time as 12-hour with AM/PM
            let hours = date.getHours();
            const minutes = date.getMinutes();
            const ampm = hours >= 12 ? 'PM' : 'AM';
            hours = hours % 12;
            hours = hours ? hours : 12; // the hour '0' should be '12'
            const timeStr =
              hours + ':' + (minutes < 10 ? '0' : '') + minutes + ' ' + ampm;
            box.querySelector('.event-timeblock').textContent = timeStr;
          }
        });
      });
    </script>
  </body>
</html>
