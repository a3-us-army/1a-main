<!DOCTYPE html>
<html>
  <head>
    <title>Forms</title>
    <meta content="1A Website" property="og:title" />
    <meta content="Welcome to 1A!" property="og:description" />
    <meta content="https://1a75.org/forms" property="og:url" />
    <meta content="https://cdn.xanderxx.xyz/1a-logo.png" property="og:image" />
    <meta content="#4b5a2a" data-react-helmet="true" name="theme-color" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/custom.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <style>
      .form-card {
        min-width: 260px;
        max-width: 340px;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
        border-radius: 1rem;
        background: #23272f;
        color: #fff;
        border: 1.5px solid #23272f;
      }
      .form-card .card-title {
        color: #ffe066;
        font-size: 1.15rem;
        font-weight: 600;
        text-shadow:
          0 1px 2px #000,
          0 0 2px #23272f;
      }
      .form-card .btn {
        font-weight: 500;
      }
      .form-card .card-text {
        color: #bdbdbd;
      }
      .create-form-btn {
        background-color: #ffe066 !important;
        color: #23272f !important;
        font-weight: 600;
        border: 2px solid #ffd43b !important;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
        transition:
          background 0.2s,
          color 0.2s;
      }
      .create-form-btn:hover,
      .create-form-btn:focus {
        background-color: #ffd43b !important;
        color: #181a1b !important;
        border-color: #ffe066 !important;
        text-decoration: none;
      }
      @media (max-width: 600px) {
        .form-card {
          min-width: 100%;
          max-width: 100%;
        }
        .create-form-btn {
          width: 100%;
          margin-top: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <%- include("../partials/navbar", { user, active }) %>
    <div class="container mt-4">
      <div
        class="d-flex justify-content-between align-items-center mb-3 flex-wrap"
      >
        <h2 class="fw-bold mb-0" style="font-size: 1.4rem">Available Forms</h2>
        <% if (isAdmin) { %>
        <a href="/forms/admin/new" class="btn create-form-btn ms-2">
          <i class="bi bi-plus-circle"></i> Create New Form
        </a>
        <% } %>
      </div>
      <% if (alert) { %>
      <div class="alert alert-success"><%= alert %></div>
      <% } %>
      <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
      <% } %>
      <% if (forms.length === 0) { %>
      <div class="alert alert-info">No forms available.</div>
      <% } %>
      <div class="row">
        <% forms.forEach(form => { %>
        <div class="col-12 col-md-6 col-lg-4 mb-3">
          <div class="card form-card h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title mb-2"><%= form.title %></h5>
              <p class="card-text mb-3"><%= form.description %></p>
              <div class="mt-auto d-flex gap-2">
                <a href="/forms/<%= form.id %>" class="btn btn-primary w-100">
                  <i class="bi bi-pencil-square"></i> Fill Out
                </a>
                <% if (isAdmin) { %>
                <a
                  href="/forms/admin/edit/<%= form.id %>"
                  class="btn btn-warning"
                  title="Edit"
                >
                  <i class="bi bi-pen"></i>
                </a>
                <form
                  action="/forms/admin/delete/<%= form.id %>"
                  method="POST"
                  style="display: inline"
                  onsubmit="return confirm('Delete this form?');"
                >
                  <button type="submit" class="btn btn-danger" title="Delete">
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
                <% } %>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <%- include("../partials/footer") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
